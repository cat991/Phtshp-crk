/* pages/loveBox/index.wxss */
page {
  background-color: whitesmoke;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

.tabBar {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding-bottom: 20rpx;
  height: 120rpx;
  width: 100%;
  background-color: #70C5C4;
}
swiper{
  margin: 40rpx 0;
}
.box {
  width: 100%;
  display: flex;
  justify-content: center;
}

.box_bt {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 300rpx;
  /* border: #88A9BA solid 1rpx; */
  background-color: #BBD8DE;
  border-radius: 20rpx;
  margin: 30rpx;
  position: relative;
  padding-bottom: 20rpx;
  padding: 10rpx;
}

.box_bt image {
  height: 250rpx;
  width: 250rpx;
}

.box .miniImage {
  position: absolute;
  width: 100%;
  height: 120rpx;
  top: 0rpx;
  border-radius: 20rpx 20rpx 0 0;
}

.box .bigImage {
  padding-top: 60rpx;
}

.box button {
  margin: 10rpx;
}

.column {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.box_bt .left {
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center;
  margin-right: 30rpx;
}

.box_bt .right view {
  margin-left: 30rpx;
  margin-top: 40rpx;
  background-image: linear-gradient(to top, #BBD8DE, white);
  border-radius: 30rpx;
  padding: 5rpx 10rpx;
  font: 13px arial, sans-serif;
}

.nan {
  background-color: #5E8AE6;
}

.nv {
  background-color: #EC59B5;
}

swiper image {
  width: 100%;
}

.putInfo {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  align-items: center;
}

.putInfo text {
  margin: 10rpx;
}

.putInfo image {
  height: 250rpx;
  width: 250rpx;
}